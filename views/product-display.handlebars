{{> html-navbar}}

<!-- main -->
<main class="container mt-4">
  <!-- back -->
  <a class="nav-link-product-display" class="btn border" href="#">back</a>
  
  <!-- row product display -->
  <div class="row">

    <!-- col product heading-->
    <div class="col-sm-12">
      <!-- product title -->
      <h4 id="product-display-title">{{product.name}}</h4>
      <!-- product description -->
      <p id"product-display-description">{{product.description}}</p>
      <!-- product number -->
      <p id="product-display-number">pn: {{product.id}}</p>
    </div>

    <!-- col product display-->
    <div class="col-sm-12 col-md-8">
      <div id="product-display-img-container">
        <img id="product-display-img" class="img-fluid" src="{{product.image}}" alt="{{product.image}}">
      </div>
    </div>

    <!-- col product description-->
    <div class="col-sm-12 col-md-4 d-flex flex-column justify-content-between">
      <!-- display information -->
      <p class="add-to-cart-msg">

      </p>
      <!-- price -->
      <p class="mt-3">
        <span>price: </span>
        <span id="product-display-price" class="d-block display-4">${{product.msrp}}</span>
      </p>
      <!-- product number and model -->
      <p>
        <span id="product-display-id" class="d-block">PN: {{product.name}} </span>
        <span id="product-display-model" class="d-block">model: {{product.model}}</span>
      </p>
      <!-- produdct category and brand -->
      <p>
        <span id="product-display-brand" class="d-block">Brand: {{product.brand}}</span>
        <span id="product-display-category" class="d-block">Category: {{product.category}}</span>
      </p>
      <!-- produdct stock and quantity -->
      <p>
        <span id="product-display-stock" class="d-block">In stock : {{product.stock}}</span>
        {{#if product.inStock}}
          <form id="product-display-form" action="#">
          <!-- product id -->
          <input type="text" value="{{product.msrp}}" hidden name="price">
          <input type="text" value="{{product.name}}" hidden name="name">
          <input type="text" value="{{product.id}}" hidden name="id">
          <input type="text" value="{{product.image}}" hidden name="image">
          <label for="product-display-quantity">Quantity</label>
          <!-- quantity -->
          <select class="form-control" id="product-display-quantity" name="quantity">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
          </select>
          <!-- add to cart -->
          <button class=" mt-3 form-control btn btn-success" id="add-to-cart-btn" type="button">Add to Cart</button>
        </form>
        {{else}}
        <div class="alert alert-warning" role="alert">
          Current out of stock
        </div>
        {{/if}}
      </p>
    </div>

  </div>

  <!-- row related products -->
  <div class="row mt-3 border-top">
    <h3 class="m-auto py-3">Related Products</h3>
    <!-- col -->
    <div class="col-12 d-flex justify-content-around flex-wrap">
      {{#each relatedProducts}}
      <!-- related product card -->
      <div class="card d-inline product-thumbnail m-2" style="width: 18rem;">
        <img class="card-img-top img-fluid" src="{{image}}"
          alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">{{name}}</h5>
          <p class="card-text">${{msrp}}</p>
          <a href="/display?id={{id}}" class="btn btn-primary">View Details</a>
        </div>
      </div>

     
      {{/each}}
    </div>
  </div>

</main>

{{> html-footer}}